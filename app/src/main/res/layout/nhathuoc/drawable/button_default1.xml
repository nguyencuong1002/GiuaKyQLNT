<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
            <stroke
                android:width="3dp"
                android:color="#fff"/>
            <corners android:radius="25dp"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#89B5F4"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
            <stroke
                android:width="3dp"
                android:color="#fff"/>
            <corners android:radius="25dp"/>
        </shape>

    </item>
</selector>
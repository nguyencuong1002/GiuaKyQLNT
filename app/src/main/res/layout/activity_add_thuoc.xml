<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Thuoc.AddThuocActivity">

    <RelativeLayout
        style="@style/Header1">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/ImageV1" />
        <TextView
            android:id="@+id/tvThuoc"
            android:layout_marginRight="90dp"
            android:text="Thêm Thuốc"
            style="@style/TxtView1"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style='@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox'
            app:boxStrokeColor="@color/text"
            app:startIconDrawable="@drawable/ic_baseline_article_24"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="10dp"
                android:id="@+id/txtMATHUOC"
                android:hint="Nhập Mã Thuốc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style='@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox'
            app:boxStrokeColor="@color/text"
            app:startIconDrawable="@drawable/ic_baseline_article_24"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTENTHUOC"
                android:hint="Nhập Tên Thuốc"
                style="@style/View1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style='@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox'
            app:boxStrokeColor="@color/text"
            app:startIconDrawable="@drawable/ic_baseline_article_24"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDVT"
                android:hint="Nhập Đơn Vị Tính"
                style="@style/View1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style='@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox'
            app:boxStrokeColor="@color/text"
            app:startIconDrawable="@drawable/ic_baseline_article_24"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="number"
                android:id="@+id/txtDONGIA"
                android:hint="Nhập Đơn Giá"
                style="@style/View1"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="addImg"
                android:id="@+id/btnAddImg"
                android:layout_marginRight="20dp"
                android:text="Thêm Ảnh"
                style="@style/ButtonCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:onClick="add"
                android:id="@+id/btnAdd"
                android:layout_marginRight="20dp"
                android:text="Add"
                style="@style/ButtonCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:onClick="cancle"
                android:id="@+id/btnCancel"
                android:text="Cancel"
                style="@style/ButtonCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgTHUOC"
            android:layout_width="344dp"
            android:layout_marginTop="15dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HoaDon.EditHoaDonActivity">

    <RelativeLayout
        style="@style/Header1">
        <ImageView
            android:id="@+id/ivBack"
            style="@style/ImageV1"/>
        <TextView
            android:id="@+id/tvNhaThuoc"
            android:layout_marginRight="80dp"
            android:text="Sửa Hóa Đơn"
            style="@style/TxtView1"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvSoHD"
            style="@style/TxtView2"/>

        <TextView
            android:text="Ngày Hóa Đơn"
            style="@style/TxtView3"/>
        <EditText
            android:id="@+id/txtNgayHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Mã NT"
            style="@style/TxtView3"/>
        <EditText
            android:id="@+id/txtMaNT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="save"
                android:id="@+id/btnAdd"
                android:layout_marginRight="50dp"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:onClick="cancle"
                android:id="@+id/btnCancel"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>